{% extends 'base.html.twig' %}

{% block title %}Contest index{% endblock %}

{% block body %}
    <h1>Contest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contest in contests %}
            <tr>
                <td>{{ contest.id }}</td>
                <td>{{ contest.createdAt ? contest.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('contest_show', {'id': contest.id}) }}">show</a>
                    <a href="{{ path('contest_edit', {'id': contest.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contest_new') }}">Create new</a>
{% endblock %}
