{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <h1>{{ tournament.name }}</h1>

    <h2>{{ tournament.teams | length }} Equipe(s) en jeu</h2>
 
    {% for team in tournament.teams %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                    <th>Victories</th>
                    <th>Show</th>
                    <th>Edit</th>
                </tr>
                <tr>
                    <td>{{ team.name }}</td>
                    <td>{{ team.score }}</td>
                    <td>{{ team.victories }}</td>
                    <td><a href="{{ path('team_show', {'id': team.id}) }}">show</a></td>
                    <td><a href="{{ path('team_edit', {'id': team.id}) }}">edit</a></td>
                    
                </tr>
            </tbody>
        </table>
    {% endfor %}

    {{ form_start(teamForm) }}
    {{ form_row(teamForm.name) }}
    <button type="submit" class="btn btn-success">Cr√©er</button>
    {{ form_end(teamForm) }}


    <a href="{{ path('tournament_index') }}">back to list</a>

    <a href="{{ path('tournament_edit', {'id': tournament.id}) }}">edit</a>

    {{ include('tournament/_delete_form.html.twig') }}
{% endblock %}
