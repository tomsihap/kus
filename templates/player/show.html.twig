{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="head-profil">
            <img class="pic-profil" src="{{ asset('dist/images/player/' ~ player.getProfilPic()) }}">
            <div class="head-info">
                <p class="infos info-player">{{ player.pseudo}}</p>
                <p class="infos info-team">{{ player.team.name}}</p>
            </div>
        </div>
    </div>

    <hr><br>
    <div class="container">   

        <h3 class="resume-title">Resume: </h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Score</th>
                    <th>Victories</th>
                    <th>Loses</th>
                    <th>Played</th>
                    <th>Team Score</th>
                </tr>
            </thead>
            <tr>
                <td class="tournament-show">{{ player.score }}</td>
                <td class="tournament-show">{{ player.victories }}</td>
                <td class="tournament-show">{{ player.lose }}</td>
                <td class="tournament-show">{{player.contestPlayed}}</td>
                <td class="tournament-show">{{ player.team.score }}</td>
        </table>



        <h3 class="resume-title">Past contests :</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Winner</th>
                    <th>Loser</th>
                    <th>Game</th>
                    <th>Points</th>

                </tr>
            </thead>
            {% for contest in player.contests %}
            <tr>
                <td class="tournament-show">{{ contest.createdAt | date('d/m/Y Ã  H:i') }}</td>
                <td class="tournament-show">{{ contest.player.pseudo}}</td>
                <td class="tournament-show">{{ contest.loser.pseudo }}</td>
                <td class="tournament-show">{{ contest.game.name }}</td>
                <td class="tournament-show">{{ contest.game.victoryValue }}</td>
                
    {% endfor %}
    </table>
    {{ include('player/_delete_form.html.twig') }}
    </div>
    

    
{% endblock %}
