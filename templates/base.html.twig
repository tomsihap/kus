<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
            integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css"
            integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
        <link href="{{ asset('dist/css/normalize.css') }}" rel="stylesheet">
        <link href="{{ asset('dist/css/style.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
<body>
    <header class="container-fluid">
        <div class="navbar row">
            <div class="container-fluid">
                <a href="/" class="navbar-brand d-flex align-items-center">
                    <strong><i class="fas fa-pencil-ruler"></i> Scoreo</strong>
                </a>
                <div>
                    <i class="fas fa-bars"></i>
                    {% if app.user %}
                     <a href="{{ path('logout') }}" class="log-btn">Deconnexion</a>
                    {% else %}
                    <a href="{{ path('app_login') }}"
                        class="log-btn">Connexion</a>
                    <a href="{{ path('app_register') }}"
                        class="log-btn">S'inscrire</a>
                    {% endif %}    
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="container">
            <?= $content ?>
            <div />
    </main>

    <footer class="container-fluid">
        <div class="navbar-dark bg-dark shadow-sm">
            <div class=" d-flex ">
                <div class=""><div />
                </div>
            </div>
    </footer>

</body>

</html>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
